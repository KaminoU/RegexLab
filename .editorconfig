# EditorConfig for Regex Lab
# https://editorconfig.org

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Sublime Text files (JSON-based)
[*.{json,sublime-settings,sublime-commands,sublime-menu,sublime-keymap}]
indent_style = tab
indent_size = 4

# YAML (GitHub Actions)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown (no trailing whitespace trim for double-space line breaks)
[*.md]
trim_trailing_whitespace = false
